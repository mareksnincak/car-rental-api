{
  "version": "0.2.0",
  "configurations": [
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "name": "Attach to container",
      "port": 9229,
      "remoteRoot": "/app",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "sourceMaps": true,
      "outFiles": [
        "/app/dist/**/*.js"
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
    },
  ]
}